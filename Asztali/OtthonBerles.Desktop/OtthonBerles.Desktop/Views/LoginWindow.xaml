<Window x:Class="OtthonBerles.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LoginWindow" Height="550" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True"
        MouseDown="Window_MouseDown"
        >
    <Window.Resources>

    </Window.Resources>

   
    <Border CornerRadius="12">
        <Border.Background>
            <ImageBrush ImageSource="/Assets/login_hatter.jpg" />
        </Border.Background>
        <Border CornerRadius="10"                
                Background="{StaticResource backgroundPrimaryColor}"
                BorderThickness="5"
                Opacity="0.97">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="{StaticResource borderColor1}" Offset="0"/>
                    <GradientStop Color="{StaticResource borderColor2}" Offset="0.25"/>
                    <GradientStop Color="{StaticResource borderColor3}" Offset="0.75"/>
                    <GradientStop Color="{StaticResource borderColor4}" Offset="0"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <StackPanel Orientation="Vertical">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="BEJELENTKEZÉS"
                               Margin="29,3,24,3"
                               Foreground="{StaticResource titleColor1}"
                               FontWeight="Bold"
                               Grid.Column="0"
                               Grid.Row="0"
                               FontSize="20"
                               FontFamily="vina sans"
                               TextAlignment="Center" Grid.ColumnSpan="3"
                               
                    />
                    <Button x:Name="btnMinimize"                        
                            Content="-"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="12"
                            Cursor="Hand"
                            Grid.Column="1"
                            Click="btnMinimize_Click"  VerticalAlignment="Center" >
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="DarkCyan"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#083A4D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <StackPanel>
                                    <Border Width="18"
                                            Height="18"
                                            Background="{TemplateBinding Background}"
                                            CornerRadius="9">
                                        <ContentPresenter 
                                            HorizontalAlignment="Center"  
                                            VerticalAlignment="Center"
                                        />
                                    </Border>
                                </StackPanel>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                    <Button x:Name="btnClose"
                            Content="X"
                            BorderThickness="0"
                            Foreground="White"
                            FontSize="11"
                            FontFamily="Montserrat"
                            Cursor="Hand"
                            Grid.Row="0"
                            Grid.Column="2"
                            Click="btnClose_Click" Margin="0,6,0,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="red"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#083A4D"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <StackPanel>
                                    <Border Width="18"
                                         Height="18"
                                         Background="{TemplateBinding Background}"
                                         CornerRadius="9">
                                        <ContentPresenter
                                                HorizontalAlignment="Center"  
                                                VerticalAlignment="Center"
                                    />
                                    </Border>
                                </StackPanel>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <Border Padding="10 10 10 10"
                        Background="LightBlue"
                        Width="235"
                        CornerRadius="25">
                    <StackPanel Orientation="Vertical"
                                Margin="0,10,0,0">
                        <Border Width="136" CornerRadius="20" Background="CadetBlue">
                            <Image Source="/Assets/OtthonBérlés.png" Height="103"/>
                        </Border>
                        <TextBlock Text="OtthonBérlés asztali alkalmazás."
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Medium"
                               TextWrapping="Wrap"
                               TextAlignment="Center"
                               Margin="0,5,0,0"/>
                        <TextBlock Text="EMAIL"
                               Foreground="White"
                               FontSize="12"
                               FontWeight="Medium"
                            
                               Margin="0,35,0,0"/>
                        <TextBox x:Name="usernameTextBox"
                                 FontSize="13"
                                 FontWeight="Medium"                      
                                 Foreground="White"
                                 CaretBrush="DarkBlue"
                                 
                                 BorderThickness="0,0,0,2"
                                 Height="28"
                                 VerticalContentAlignment="Center"
                                 Margin="0,5,0,0"
                                 Padding="20,0,0,0">
                            <TextBox.Background>
                                <ImageBrush ImageSource="\Assets\user-icon.png"
                                        Stretch="None"
                                        AlignmentX="Left"/>
                            </TextBox.Background>
                        </TextBox>
                        <TextBlock Text="JELSZÓ"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   FontFamily="Montserrat"                             
                                   Margin="0,15,0,0"/>
                        <PasswordBox x:Name="passwordTextBox"
                                 FontSize="13"
                                 FontWeight="Medium"                      
                                 Foreground="White"
                                 CaretBrush="DarkBlue"
         
                                 BorderThickness="0,0,0,2"
                                 Height="28"
                                 VerticalContentAlignment="Center"
                                 Margin="0,5,0,0"
                                 Padding="20,0,0,0">    
                            <PasswordBox.Background>
                                <ImageBrush ImageSource="\Assets\KEY-icon.png"
                                            Stretch="None"
                                            AlignmentX="Left"/>
                            </PasswordBox.Background>
                        </PasswordBox>
                        <Button x:Name="loginButton"  
                                BorderThickness="0"
                                Content="BELÉPÉS"
                                Foreground="White"
                                FontSize="12"
                                FontFamily="Montserrat"
                                Cursor="Hand"                           
                                Margin="0,50,0,0" Click="loginButton_Click">
                            <Button.Style>
                                <Style TargetType="{x:Type Button}">
                                    <Setter Property="Background" Value="CadetBlue"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="LightGray"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <Button.Template>
                                <ControlTemplate TargetType="{x:Type Button}">
                                    <Border Width="150" Height="40"
                                            CornerRadius="20"
                                            Background="{TemplateBinding Background}">
                                        <ContentPresenter VerticalAlignment="Center"
                                                          HorizontalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Center"
                                Margin="0,15,0,0">
                            
                            
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Border>
</Window>
