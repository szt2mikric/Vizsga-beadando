<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="Title" TargetType="ContentControl">
        <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        <Setter Property="FontSize" Value="22"></Setter>
        <Setter Property="Foreground" Value="{StaticResource titleColor1}"></Setter>
        <Setter Property="Margin" Value="0 12 0 0"></Setter>
    </Style>
    <Style x:Key="FormLabel" TargetType="Label">
        <Setter Property="Margin" Value="8 4 2 2"></Setter>
        <Setter Property="Foreground" Value="{DynamicResource plainTextColor4}"></Setter>
    </Style>
    <Style x:Key="FormTextBox" TargetType="TextBox">
        <Setter Property="Foreground"  Value="{DynamicResource plainTextColor2}"></Setter>
        <Setter Property="Background" Value="{DynamicResource backgroundColorThird}"></Setter>
    </Style>
    <Style x:Key="FormComboBox" TargetType="ComboBox">
        <Setter Property="Foreground"  Value="{DynamicResource controlBackgraoundColor}"></Setter>
        <Setter Property="Background" Value="{DynamicResource plainTextColor2 }"></Setter>
    </Style>
</ResourceDictionary>